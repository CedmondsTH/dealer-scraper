# Dealer Scraper Configuration
# Copy this file to .env and adjust values for your environment

# Application Environment
DEBUG=false
ENVIRONMENT=production

# OpenAI Configuration (required for LLM scraping strategies)
OPENAI_API_KEY=your_openai_api_key_here

# Scraping Configuration
SCRAPING_TIMEOUT=60000
SCRAPING_HEADLESS=true
SCRAPING_VIEWPORT_WIDTH=1920
SCRAPING_VIEWPORT_HEIGHT=1080
SCRAPING_MAX_RETRIES=3
SCRAPING_DEBUG_FILES=false

# Data Processing
DATA_MAX_DEALERS=1000
DATA_MIN_NAME_LENGTH=2
DATA_VALIDATE_ADDRESSES=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5

# UI Configuration
UI_PAGE_TITLE=Dealer Group Dealership Scraper
UI_LAYOUT=centered
UI_LOGO_PATH=assets/trackhawk_logo.png
UI_CACHE_ENABLED=true

# Railway/Production Settings
PORT=8501
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_PORT=8501